<div id="sidebar">
  <h1><span>total points</span></h1>
  <ul>
    <% @game.players.each do |player| -%>
      <%= render :partial => "common/player",
            :locals => { :player => player, :current => false } -%>
    <% end -%>
  </ul>        
</div>

<div id="main">
  <div id="rolls">
    <div class="turn">
      <h1>Your Turn</h1>
      <% @rolls.each do |roll| -%>
        <%= render :partial => "common/rolls",
              :locals => { :player => @game.current_player, :roll => roll } -%>
      <% end -%>
    </div>
  </div>
  <p>
    <%= link_to "Continue", start_turn_path(@game), :class => 'button' %>
 </p>
</div>
