<% if flash[:error] -%>
  <div class="error_message"><%= flash[:error] %></div>
<% end -%>

<%= form_for :member, :url => { :action => "create" }, :html =>  { :id => 'new_member', :class => 'data_entry' } do |f| %>
  <%= f.error_messages %>
  <div class="field">
    <%= f.label :name, "Enter Your Name" -%>
    <%= f.text_field "name" %>
  </div>
  <div class="field">
    <%= f.label :email, "Enter Your Email" -%>
    <%= f.text_field "email" %>
  </div>
  <div class="field">
    <%= f.submit "Create" %>
  </div>
<% end -%>
