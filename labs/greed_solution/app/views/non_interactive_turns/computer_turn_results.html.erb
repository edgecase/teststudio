<div id="sidebar">
  <h1><span>total points</span></h1>
  <ul>
    <% @game.players.each do |player| -%>
      <%= render :partial => "common/player",
            :locals => { :player => player, :current => false } -%>
    <% end -%>
  </ul>        
</div>

<div id="main">
  <div id="rolls">
    <% @most_recent_turn.each do |turn| -%>
      <div class="turn">
        <h1><%= turn.player.name %>'s Turn</h1>
        <% turn.rolls.each do |roll| -%>
          <%= render :partial => "common/rolls",
              :locals => { :player => turn.player, :roll => roll } -%>
        <% end -%>
      </div>
    <% end -%>
  </div>
  <p><%= link_to "Start Your Turn", {
           :controller => "turns",
           :action => 'start_turn',
           :game => @game.id,
           :player => @game.human_player.id,
         }, :class => 'button' %></p>
</div>

